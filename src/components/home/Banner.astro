---
import Button from '../common/Button.astro';
---

<div class="w-full max-w-[1400px] mx-auto py-8 px-4 sm:px-6 lg:px-8">
  
  <section class="relative w-full rounded-3xl overflow-hidden shadow-2xl group
                  aspect-video   /* Esto es lo nuevo: fuerza una relación de 16:9 */
                  max-h-[700px]  /* Opcional: limita la altura máxima para pantallas muy grandes */
                  ">
    
    <div class="absolute inset-0 z-0">
      <img 
        src="/public/images/coche.png" 
        alt="Lamborghini Montable Eléctrico en escenario neón" 
        class="w-full h-full object-cover object-center transition-transform duration-700 group-hover:scale-105"
      />
      <div class="absolute inset-0 bg-black/20"></div>
    </div>

    <div class="relative z-10 w-full h-full flex flex-col justify-between py-10">
      
      <div class="absolute top-1/2 left-0 w-full -translate-y-1/2 flex justify-between px-4 md:px-10 pointer-events-none">
        <button class="pointer-events-auto p-3 rounded-full border-2 border-white text-white hover:bg-white hover:text-black transition-all duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
        </button>

        <button class="pointer-events-auto p-3 rounded-full border-2 border-white text-white hover:bg-white hover:text-black transition-all duration-300">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
        </button>
      </div>

      <div class="absolute bottom-12 left-1/2 -translate-x-1/2">
        <Button href="/catalog" text="Ver todo" />
      </div>

    </div>
  </section>
</div>