---
import '../../styles/global.css';
---

<header class="sticky top-0 z-50 h-20 bg-[#252F3E] shadow-xl w-full">
  <div class="container mx-auto h-full max-w-[1200px] px-5 flex justify-between items-center">
    
    <a href="/" class="flex items-center gap-3 font-brand text-xl uppercase tracking-wider text-white">
      <div class="relative w-6 h-6">
        <span class="absolute top-0 left-0 w-3.5 h-3.5 bg-pink-300"></span>
        <span class="absolute bottom-0 right-0 w-3.5 h-3.5 bg-white opacity-80"></span>
      </div>
      E-MONTABLES
    </a>

    <nav>
      <ul class="flex gap-10 text-white font-body text-[15px]">
        
        <li class="group relative h-20 flex items-center">
          <a href="/electricos" class="flex items-center gap-1.5 transition-colors hover:text-primary cursor-pointer">
            Montables eléctricos
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" 
              class="transition-transform duration-300 group-hover:rotate-180">
              <path d="m6 9 6 6 6-6"/>
            </svg>
          </a>
          
          <div class="absolute top-full left-1/2 -translate-x-1/2 mt-0 w-56 bg-[#2f3b4e] rounded-lg shadow-2xl 
                      invisible opacity-0 translate-y-2 transition-all duration-300 
                      group-hover:visible group-hover:opacity-100 group-hover:translate-y-0">
            
            <div class="absolute -top-1.5 left-1/2 -ml-1.5 w-3 h-3 bg-[#2f3b4e] rotate-45"></div>

            <div class="flex flex-col py-2 text-gray-300 text-sm">
              <a href="/electricos/deportivos" class="px-5 py-2.5 hover:bg-white/5 hover:text-secondary transition-colors">Deportivos</a>
              <a href="/electricos/camionetas" class="px-5 py-2.5 hover:bg-white/5 hover:text-secondary transition-colors">Camionetas 4x4</a>
              <a href="/electricos/clasicos" class="px-5 py-2.5 hover:bg-white/5 hover:text-secondary transition-colors">Clásicos</a>
            </div>
          </div>
        </li>

        <li class="group relative h-20 flex items-center">
          <a href="/motos" class="flex items-center gap-1.5 transition-colors hover:text-primary cursor-pointer">
            Motocicletas
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" 
              class="transition-transform duration-300 group-hover:rotate-180">
              <path d="m6 9 6 6 6-6"/>
            </svg>
          </a>

          <div class="absolute top-full left-1/2 -translate-x-1/2 mt-0 w-56 bg-[#2f3b4e] rounded-lg shadow-2xl 
                      invisible opacity-0 translate-y-2 transition-all duration-300 
                      group-hover:visible group-hover:opacity-100 group-hover:translate-y-0">
             
             <div class="absolute -top-1.5 left-1/2 -ml-1.5 w-3 h-3 bg-[#2f3b4e] rotate-45"></div>

             <div class="flex flex-col py-2 text-gray-300 text-sm">
              <a href="/motos/deportivas" class="px-5 py-2.5 hover:bg-white/5 hover:text-secondary transition-colors">Deportivas</a>
              <a href="/motos/cross" class="px-5 py-2.5 hover:bg-white/5 hover:text-secondary transition-colors">Cross / Enduro</a>
            </div>
          </div>
        </li>
      </ul>
    </nav>

    <div>
      <a href="/contacto" class="inline-block px-6 py-2.5 bg-[#FF2800] text-white font-body font-semibold rounded-full transition-transform hover:scale-105 hover:brightness-110">
        Contáctanos
      </a>
    </div>

  </div>
</header>